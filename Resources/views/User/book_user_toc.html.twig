{{ pageSetVar('title', 'The book') }}
{{ pageAddAsset('javascript', zasset('jquery-ui/jquery-ui.js')) }}
{{ pageAddAsset('stylesheet', asset('jquery-ui/themes/base/jquery-ui.min.css')) }}
<div class="container-fluid">
    <h3>{{ book.name }}</h3>
    <div id="ArticleList">
        {% for chapter in book.chapters %}
            {% if chapter.print > 0 %}
                <h4>{{ chapter.number }} - {{ chapter.name }}</h4>
                <div>
                {% for article in chapter.articles %}
                {% if chapter.print == 1 %}
                {% else %}
                    <p>{{ chapter.number }} - {{ article.number }} {{ article.title }}</p>
                {% endif %}
                <p><a href="{{ path('paustianbookmodule_user_displayarticle') }}/{{ article.aid }}">{{ chapter.number }} - {{ article.number }} {{ article.title }}</a></p>
                {% endfor %}
                </div>
            {% endif %}
        {% endfor %}
    </div>
    <script type="text/javascript">
        (function ($) {
            $('#ArticleList').accordion({
                collapsible: true,
                heightStyle: "content"
            });
        })(jQuery);
    </script>
</div>