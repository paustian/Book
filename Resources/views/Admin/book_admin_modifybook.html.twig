{{ pageAddAsset('javascript', asset('jquery-ui/jquery-ui.min.js')) }}

<div class="container-fluid">
    {{ showflashes() }}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ 'Book' | trans  }}</th>
                <th> {{ 'Actions' | trans  }} </th></tr>
        </thead>
        <tbody>
            {% for item in books %}
                <tr>
                    <td>{{ item.name }} ({{  item.bid }})</td>
                    <td class="actions">
                        <a href="{{ path('paustianbookmodule_admin_edit') }}/{{ item.bid }}" class="fa fa-pencil"></a>
                        <a href="{{ path('paustianbookmodule_admin_delete') }}/{{ item.bid }}" class="fa fa-trash-o" onclick="return confirm('Are you sure you want to delete this book?')"></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>    
</div>

