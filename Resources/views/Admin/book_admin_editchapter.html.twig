<h3>
    <span class="fa fa-edit"></span>
    {{ "Create/Edit a Chapter" | trans }}
    {{ pageSetVar('title', 'Create/Edit Chapter'|trans) }}
</h3>
<div class="alert alert-info">{{ "Give the Chapter a name" | trans }}</div>
{{ showflashes() }}
        {{ form_start(form) }}
        {{ form_errors(form) }}
<fieldset>
    <legend>{{ 'Chapter Name' | trans }}</legend>
    {{ form_row(form.name) }}
    {{ form_row(form.number) }}
    <div class="form-group row">
        <label class="col-md-3 control-label required">Book</label>
        <div class="col-md-9">
            <select name="book" class="custom-select form-control">
                {% for item in books %}
                    {% if chapter.bid == item.bid %}
                        <option value="{{ item.bid }}" selected>{{ item.name }}</option>
                    {% else %}
                        <option value="{{ item.bid }}">{{ item.name }}</option>
                    {% endif %}
                {% endfor %}
            </select>
        </div>
</fieldset>
<div class="form-group">
    <div class="col-lg-offset-3 col-lg-9">
        {{ form_widget(form.add, {'attr': {'class': 'btn btn-danger'}}) }}
    </div>
</div>

{{ form_end(form) }}


