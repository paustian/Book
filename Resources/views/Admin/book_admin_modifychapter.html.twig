{% form_theme form 'ZikulaFormExtensionBundle:Form:bootstrap_3_zikula_admin_layout.html.twig' %}
{{ render(controller('ZikulaAdminModule:Admin:adminheader')) }} 
<div class="container-fluid">
    {{ showflashes() }}
    <table class="table table-striped">
        <thead>
            <tr>
                <th>{{ __('Chapter') }}</th>
                <th>{{ __('Book') }}</th>
                <th> {{ __('Actions') }} </th></tr>
        </thead>
        <tbody>
            {% for item in chapters %}
                <tr>
                    <td>{{ item.name }}</td>
                    <td>{{ books[loop.index0] }}</td>
                    <td class="actions">
                        <a href="{{ path('paustianbookmodule_admin_editchapter') }}/{{ item.cid }}" class="fa fa-pencil"></a>
                        <a href="{{ path('paustianbookmodule_admin_deletechapter') }}/{{ item.cid }}" class="fa fa-trash-o" onclick="return confirm('Are you sure you want to delete this chapter?')"></a>
                    </td>
                </tr>
            {% endfor %}
        </tbody>
    </table>    
</div>
{{ render(controller('ZikulaAdminModule:Admin:adminfooter')) }}
